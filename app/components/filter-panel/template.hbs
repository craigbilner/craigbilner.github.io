<div class="filter-panel">
    <div class="head">
        <h2>hunt for some post</h2>
    </div>
    <div class="body">
        <div class="title">
            <h3>search</h3>
        </div>
        <div class="filters">
            <div class="filter input">
                <label for="filter-keywords">keywords</label>
                <input id="filter-keywords" type="text" placeholder="type keywords" onkeyup={{action "filterChange" "filter-keywords"}} />
            </div>
        </div>
        <div class="title">
            <h3>length</h3>
        </div>
        <div class="filters">
            <div class="filter checkbox">
                <input id="filter-short" type="checkbox" onchange={{action "filterChange" "filter-short"}} />
                <label for="filter-short">short and sweet</label>
            </div>
            <div class="filter checkbox">
                <input id="filter-medium" type="checkbox" onchange={{action "filterChange" "filter-medium"}} />
                <label for="filter-medium">medium (not Medium)</label>
            </div>
            <div class="filter checkbox">
                <input id="filter-long" type="checkbox" onchange={{action "filterChange" "filter-long"}} />
                <label for="filter-long">tl;dr...zzzzzz</label>
            </div>
        </div>
        <div class="title">
            <h3>category</h3>
        </div>
        <div class="filters">
            <div class="filter checkbox">
                <input id="filter-quick" type="checkbox" onchange={{action "filterChange" "filter-quick"}} />
                <label for="filter-quick">quick tip</label>
            </div>
            <div class="filter checkbox">
                <input id="filter-code" type="checkbox" onchange={{action "filterChange" "filter-code"}} />
                <label for="filter-code">if (code) { read(); }</label>
            </div>
            <div class="filter checkbox">
                <input id="filter-opinion" type="checkbox" onchange={{action "filterChange" "filter-opinion"}} />
                <label for="filter-opinion">unwarranted opinion</label>
            </div>
        </div>
    </div>
</div>
